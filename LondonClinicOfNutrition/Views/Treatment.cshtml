        <div class="section__indicator">
            <span>scroll</span>
            <button type="button" class="arrow"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
        </div>
    </div>
</div>
<div class="section">
    <a name="treatments"></a>
    <div class="inner">
        <div class="section__header">
            <span class="section__title">Treatments</span>
        </div>
        <div class="section__content">
            @Model.Content.GetPropertyValue("treatments")
        </div>
        <div class="section__indicator">
            <button type="button" class="arrow arrow--inverted"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
            <span>back to top</span>
        </div>
    </div>
</div>
@Html.Partial("HighlightBar/HighlightBar", Model.Content)