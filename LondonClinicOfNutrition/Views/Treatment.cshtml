@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
}
@Html.Partial("Banner/Banner", Model.Content)
<div class="controls">
    <div class="inner">
        <div class="controls__left">
            <a href=""><span class="arrow arrow--left"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></span> BACK</a>
        </div>
        <div class="controls__center">
            <div class="filter">
                <ul class="buttons buttons--alt">
                    <li><a href="#about">ABOUT</a></li>
                    <li><a href="#types">TYPES</a></li>
                    <li><a href="#symptoms">SYMPTOMS</a></li>
                    <li><a href="#causes">CAUSES</a></li>
                    <li><a href="#treatments">TREATMENTS</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <a name="about"></a>
    <div class="inner">
        <div class="section__header">
            <span class="section__title">About</span>
        </div>
        <div class="section__content">
            @Model.Content.GetPropertyValue("about")
        </div>
        <div class="section__indicator">
            <span>scroll</span>
            <button type="button" class="arrow"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
        </div>
    </div>
</div>
<div class="section">
    <a name="types"></a>
    <div class="inner">
        <div class="section__header">
            <span class="section__title">Types</span>
        </div>
        <div class="section__content">
            @Model.Content.GetPropertyValue("types")
