        </div>
    </div>
</div>
<div class="section">
    <a name="symptoms"></a>
    <div class="inner">
        <div class="section__header">
            <span class="section__title">Symptoms</span>
        </div>
        <div class="section__content">
            @Model.Content.GetPropertyValue("symptoms")
        </div>
        <div class="section__indicator">
            <span>scroll</span>
            <button type="button" class="arrow"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
        </div>
    </div>
</div>
<div class="section">
    <a name="causes"></a>
    <div class="inner">
        <div class="section__header">
            <span class="section__title">Causes</span>
        </div>
        <div class="section__content">
