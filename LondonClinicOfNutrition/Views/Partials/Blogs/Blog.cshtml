@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ 
    var date = Model.Content.CreateDate.ToString("dd MMMM yyyy");

    if (Model.Content.GetPropertyValue("postDate") != null)
    {
        DateTime customDate = DateTime.Parse(Model.Content.GetPropertyValue("postDate").ToString());
        date = customDate.ToString("dd MMMM yyyy");
    }
}
<div class="section__content">
    <span class="timestamp"><span class="timestamp__icon svg-load" data-src="/images/icon-timestamp.svg"></span> Posted @date</span>
    @Model.Content.GetPropertyValue("bodyContent")
</div>
<div class="section__social">
    <span class="timestamp">Posted @date by @Model.Content.CreatorName</span>
    @Html.Partial("Social/Social", Model.Content)
</div>
<div class="section__comments">
    @Html.Partial("Comments/Comments", Model.Content)
</div>