@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ 
    var blogs = Umbraco.TypedContentSingleAtXPath("//blogs");
    var take = 999;
    var scroll = false;

    if (Model.Content.DocumentTypeAlias != "blogs")
    {
        take = 6;
        scroll = true;
    }
}
<div class="section__header">
    <span class="section__title">@blogs.GetPropertyValue("sectionTitle")</span>
</div>
<div class="boxes-blogs">
    <div class="boxes" data-id="@blogs.Id" data-take="@take" data-scroll="@scroll">
    </div>
</div>
@if (Model.Content.DocumentTypeAlias != "blogs")
{
<div class="section__footer">
    <span class="button section__button section__button--center"><a href="@blogs.Url">View all @blogs.Name</a></span>
</div>
<div class="section__indicator">
    <span>scroll</span>
    <button type="button" class="round-button arrow"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
</div>
}
else
{
    <div class="section__indicator">
        <span>load more</span>
        <button type="button" class="round-button load-more"><span class="svg-load" data-src="/images/icon-load.svg"></span></button>
    </div>
}