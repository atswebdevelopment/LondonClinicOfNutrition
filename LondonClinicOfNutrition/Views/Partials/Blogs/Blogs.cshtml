@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ 
    var blogs = Umbraco.TypedContentSingleAtXPath("//blogs");
    var take = 999;
    var scroll = false;

    if(blogs.Id != Model.Content.Id)
    {
        take = 6;
        scroll = true;
    }
}
<div class="section__header">
    <span class="section__title">Lcon Blog</span>
</div>
<div class="boxes-blogs">
    <div class="boxes" data-id="@blogs.Id" data-take="@take" data-scroll="@scroll">
    </div>
</div>
@if (blogs.Id != Model.Content.Id)
{
<div class="section__footer">
    <span class="button section__button section__button--center"><a href="@blogs.Url">View all @blogs.Name</a></span>
</div>
<div class="section__indicator">
    <span>scroll</span>
    <button type="button" class="arrow"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
</div>
}