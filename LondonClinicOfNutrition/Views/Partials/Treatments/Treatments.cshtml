@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ 
    var treatments = Umbraco.TypedContentSingleAtXPath("//treatments");
    var take = 999;
    var scroll = false;

    if(treatments.Id != Model.Content.Id)
    {
        take = 6;
        scroll = true;
    }
}
<div class="section__header">
    <span class="section__title">Conditions we treat</span>
</div>
<div class="boxes-treatments">
    <div class="boxes" data-id="@treatments.Id" data-take="@take" data-scroll="@scroll">
    </div>
</div>