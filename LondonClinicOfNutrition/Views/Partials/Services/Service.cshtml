@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ 
    var services = Model.Content;
    var take = 999;
    var scroll = false;
}
<div class="section__header">
    <span class="section__title">@Model.Content.Name</span>
</div>
<div class="section__content">
    @Model.Content.GetPropertyValue("bodyContent")
</div>
<div class="section__social">
@if (Model.Content.Children.Count() == 0)
{
<ul class="social">
    <li class="social__link"><a href=""><span class="svg-load" data-src="/images/icon-twitter.svg"></span></a></li>
    <li class="social__link"><a href=""><span class="svg-load" data-src="/images/icon-facebook.svg"></span></a></li>
    <li class="social__link"><a href=""><span class="svg-load" data-src="/images/icon-linkedin.svg"></span></a></li>
    <li class="social__link"><a href=""><span class="svg-load" data-src="/images/icon-phone.svg"></span></a></li>
    <li class="social__link"><a href=""><span class="svg-load" data-src="/images/icon-email.svg"></span></a></li>
</ul>
}
</div>
@if (Model.Content.Children.Count() == 0)
{
<div class="section__indicator">
    <button type="button" class="arrow arrow--inverted"><span class="svg-load" data-src="/images/icon-arrow.svg"></span></button>
    <span>back to top</span>
</div>
}
else
{
<div class="boxes-services boxes-services--service">
    <div class="boxes" data-id="@services.Id" data-take="@take" data-scroll="@scroll">
    </div>
</div>
}